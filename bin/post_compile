#!/usr/bin/env bash

set -eo pipefail

indent() {
  sed "s/^/       /"
}

puts-step() {
  echo "-----> $@"
}

puts-step "Installing dependencies with poetry"
mkdir -p ~/.config/pypoetry/
touch ~/.config/pypoetry/config.toml
poetry config settings.virtualenvs.create false 2>&1 | indent
poetry install --no-dev 2>&1 | indent
